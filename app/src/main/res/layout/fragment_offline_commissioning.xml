<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OfflineCommissioning">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="67dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="22dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/wifi_logo" />

            <TextView
                android:id="@+id/co_rssi"
                android:layout_width="29dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@id/imageView2"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="17dp"
                android:layout_marginBottom="-18dp"
                android:text="-100"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/co_name"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="69dp"
                android:layout_toEndOf="@+id/co_rssi"
                android:text="IR BLASTER"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/co_bleAddress"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/co_name"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@+id/imageView2"
                android:text="XX:XX:XX:XX:XX:XX" />

            <Button
                android:id="@+id/co_pair"
                android:layout_width="130dp"
                android:layout_height="46dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:text=" pair " />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>